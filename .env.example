# =============================================================================
# AMI Platform — Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values for your environment
# For production: APP_ENV=production, APP_DEBUG=false
# =============================================================================

APP_NAME=AMI
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_CO

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# ─── Logging ─────────────────────────────────────────────────────────────
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
# LOG_LEVEL=warning  # For production

# ─── Database (PostgreSQL) ───────────────────────────────────────────────
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=ami_platform
DB_USERNAME=ami_user
DB_PASSWORD=

# ─── Session ─────────────────────────────────────────────────────────────
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
# SESSION_SECURE_COOKIE=true  # Enable in production with HTTPS

# ─── Services ────────────────────────────────────────────────────────────
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
CACHE_STORE=redis

# ─── Redis ───────────────────────────────────────────────────────────────
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ─── Mail ────────────────────────────────────────────────────────────────
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hola@alphamarkets.io"
MAIL_FROM_NAME="${APP_NAME}"

# ─── Stripe (Payments) ──────────────────────────────────────────────────
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=
CASHIER_CURRENCY=usd

# ─── Trading Journal ─────────────────────────────────────────────────────
JOURNAL_ENABLED=true

# ─── Vite ────────────────────────────────────────────────────────────────
VITE_APP_NAME="${APP_NAME}"
